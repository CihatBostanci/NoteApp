<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FEFEFD</item>
        <item name="colorPrimaryVariant">#090808</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedTextInputLayout" style="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="android:layout_margin">5dp</item>

    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:background">@drawable/cardviewshape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name= "android:textColorHint">@color/white</item>
        <item name= "android:maxLines">1</item>
        <item name= "android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/opensansitalic</item>
    </style>
    <style name="modifiedEditTextPassword" parent="parent">
        <item name="android:background">@drawable/cardviewshape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name= "android:textColorHint">@color/white</item>
        <item name= "android:maxLines">1</item>
        <item name= "android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/opensansitalic</item>
        <item name="android:drawableStart">@drawable/ic_baseline_vpn_key_24</item>
    </style>


    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="loginButton" parent="viewParent" style="?attr/materialButtonOutlinedStyle">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>